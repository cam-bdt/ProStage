{% extends 'base.html.twig' %}
{% block title %} Stage n°{{idStage}} - PROSTAGE {% endblock %}
{% block stylesheets %}
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
{% endblock %}


{% block body %}
<div class="container container-fluid">
        <H1> Bienvenue sur le stage n°{{idStage}} </H1>
        <h2> <b> Stage de {{ stage.titre }} porposé par {{ stage.entreprise.nom }} </b> </h2>
        <div class="row">

                <div class="col-3">
                        <H3> <b> <u>Description :</u> </b>  <p> {{ stage.description }} </p>
                        </H3>
                </div>
                <div class="col-3">
                        <h3> <b> <u>  Mail :</u> </b> <p> {{ stage.mail }} </p> </h3>
                </div>
                <div class="col-3">
                        <h3> <b> <u> Numéro de téléphone :</u> </b> <p> {{ stage.telephone }} </p> </h3>
                </div>
                <div class="col-3">
                        <h3> <b> <u> Nom du contact :</u> </b> <p> {{ stage.nomContact }} </p> </h3>
                </div>
        </div>
</div>
{% endblock %}
{% block javascripts %}{% endblock %}